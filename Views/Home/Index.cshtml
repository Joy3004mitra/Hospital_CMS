@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@{
    var siteDetails = ViewBag.SiteDetails as HospitalManagement.Models.HeadSetting;
}

<!-- HERO-2
============================================= -->
<section id="hero-2" class="hero-section division">


    <!-- SLIDER -->
    <div class="slider blue-nav">
        <ul class="slides">
            @if (siteDetails != null)
            {
                <li id="slide-1">
                    <a href="@siteDetails.BannerLink1"><img src="@siteDetails.BannerImage1" alt="Hiramani Memorial Hospital" title="Hiramani Memorial Hospital"></a>
                </li>
                <li id="slide-2">
                    <a href="@siteDetails.BannerLink2"><img src="@siteDetails.BannerImage2" alt="Hiramani Memorial Hospital" title="Hiramani Memorial Hospital"></a>
                </li>
