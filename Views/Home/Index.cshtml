<!-- DOCTORS-1
============================================= -->
<section id="doctors-1" class=" pt-50 pb-50 doctors-section division bg-lightblue">
    <div class="container">


        <!-- SECTION TITLE -->
        <div class="row">
            <div class="col-lg-10 offset-lg-1 section-title">
                <span class="section-id blue-color">Our Specialists</span>
                <!-- Title 	-->
                <h3 class="h3-md steelblue-color">Meet Our <span class="blue-text">Specialized Doctors</span></h3>



            </div>
        </div>	 <!-- END SECTION TITLE -->
        <!-- TESTIMONIALS CONTENT -->
        <div class="row">
            <div class="col-md-12">
                <div class="owl-carousel owl-theme doctor-holder">
                    @{
                        var doctors = ViewBag.DoctorList as List<HospitalManagement.Models.MastDoctor>;
                    }
                    @if (doctors != null && doctors.Count > 0)
                    {
                        @foreach (MastDoctor doctor in doctors)
                        {
                            <div class="doctor-item">
                                <div class="doctor-1">

                                    <!-- Doctor Photo -->
                                    <div class="hover-overlay text-center">

                                        <!-- Photo -->
                                        <img class="img-fluid" src="@doctor.DoctorImage" alt="Ratnakamal Medical Centre of Excellence" title="Ratnakamal Medical Centre of Excellence">


                                    </div>

                                    <!-- Doctor Meta -->
                                    <div class="doctor-meta">

                                        <h5 class="h5-sm steelblue-color">@doctor.DoctorName</h5>
                                        <span class="blue-color">@doctor.DoctorDegree</span>

                                        <p class="p-sm grey-color">
                                            @doctor.DoctorDesc
                                        </p>
                                        <div>
                                            <div class="footer-socials-links mt-20">
                                                <ul class="foo-socials text-center clearfix">

                                                    <li><a href="@doctor.FaceboolProfileLink" class="ico-facebook"><i class="fab fa-facebook-f"></i></a></li>
                                                    <li><a href="@doctor.LinkedInLink" class="ico-linkedin"><i class="fab fa-linkedin-in"></i></a></li>
                                                    <li><a href="@doctor.XLink" class="ico-twitter"><i class="fab fa-twitter"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        }
                    }


                </div>
            </div>
        </div>
        <!-- END TESTIMONIALS CONTENT -->
        <!-- ALL DOCTORS BUTTON -->
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="all-doctors mb-40">
                    <a href="@Url.Action("Doctor","Home")" class="btn btn-blue blue-hover">See All Doctors</a>
                </div>
            </div>
        </div>


    </div>	   <!-- End container -->
</section>	<!-- END DOCTORS-1 -->
