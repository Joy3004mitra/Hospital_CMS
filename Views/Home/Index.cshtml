@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@{
    var siteDetails = ViewBag.SiteDetails as HospitalManagement.Models.HeadSetting;
}

<!-- HERO-2
============================================= -->
<section id="hero-2" class="hero-section division">


    <!-- SLIDER -->
    <div class="slider blue-nav">
        <ul class="slides">
            @if (siteDetails != null)
            {
                <li id="slide-1">
                    <a href="@siteDetails.BannerLink1"><img src="@siteDetails.BannerImage1" alt="Ratnakamal Medical Centre of Excellence" title="Ratnakamal Medical Centre of Excellence"></a>
                </li>
                <li id="slide-2">
                    <a href="@siteDetails.BannerLink2"><img src="@siteDetails.BannerImage2" alt="Ratnakamal Medical Centre of Excellence" title="Ratnakamal Medical Centre of Excellence"></a>
                </li>
                <li id="slide-3">
                    <a href="@siteDetails.BannerLink3"><img src="@siteDetails.BannerImage3" alt="Ratnakamal Medical Centre of Excellence" title="Ratnakamal Medical Centre of Excellence"></a>
                </li>
                <li id="slide-4">
                    <a href="@siteDetails.BannerLink4"><img src="@siteDetails.BannerImage4" alt="Ratnakamal Medical Centre of Excellence" title="Ratnakamal Medical Centre of Excellence"></a>
                </li>
            }
        </ul>
    </div>	<!-- END SLIDER -->



</section>	<!-- END HERO-2 -->
<!-- INFO-4
============================================= -->
<section id="info-4" class=" pt-50 pb-50 info-section division">
    <div class="container">
        <div class="row d-flex align-items-center">


            <!-- INFO IMAGE -->
            <div class="col-lg-6">
                <div class="info-4-img mb-40 text-center ">
                    <img class="img-fluid" src="~/images/new-img/ambition.jpg" alt="info-image">
                </div>
            </div>


            <!-- INFO TEXT -->
            <div class="col-lg-6">
                <div class="txt-block mb-40 pc-30 ">

                    <!-- Section ID -->
                    <span class="section-id blue-color">Our Ambitions</span>

                    <!-- Title -->
                    <h1 class="h3-md steelblue-color">Our Patients Are Our Priority, We Offer <span class="blue-text">Specialist Doctor Service</span></h1>

                    <!-- Text -->
                    <p>
                        <b>Providing Quality & Comprehensive Health Care under one roof:</b></br></br>
                        Ratnakamal Medical Centre of Excellence & Diagnostic Centre offers a wide range of advanced diagnostic and clinical services designed to ensure accurate, reliable and patient-focused healthcare. Our centre provides complete support across Pathology, Genetics, Fetal Medicine, MSK Ultrasound, General & 4D USG, and multiple cardiac and respiratory investigations...
                    </p>
                    <!-- Button -->
                    <a href="@Url.Action("AboutUs","Home")" class="btn btn-blue blue-hover">Learn more</a>
                </div>
            </div>	<!-- END TEXT BLOCK -->
        </div>    <!-- End row -->
    </div>	   <!-- End container -->
</section>	<!-- END INFO-4 -->
<!-- SERVICES-4
============================================= -->
<section class=" pt-50 pb-50 division">
    <div class="container">


        <!-- SECTION TITLE -->
        <div class="row">
            <div class="col-lg-10 offset-lg-1 section-title">
                <!-- Section ID -->
                <span class="section-id blue-color">Our Services</span>

                <!-- Title 	-->
                <h3 class="h3-md steelblue-color">Services We <span class="blue-text">Offer</span></h3>


            </div>
        </div>


        <div class="row">
            @{
                var services = ViewBag.ServiceList as List<HospitalManagement.Models.MastHosService>;
            }
            @if (services != null && services.Count > 0)
            {
                @foreach (MastHosService service in services)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="sbox-4 ">

                            <!-- Image -->
                            <img class="img-fluid" src="@service.ServiceImage" alt="Ratnakamal Medical Centre of Excellence" title="Ratnakamal Medical Centre of Excellence" />

                            <!-- Text -->
                            <div class="sbox-4-txt">
                                <h5 class="h5-md steelblue-color"><a href="@Url.Action("Service","Home")">@service.ServiceName</a></h5>
                                <p>
                                    @service.ServiceShortDesc
                                </p>
                                @*<br /><a href="@Url.Action("Service","Home")" class="readmore blue-text">Read more <i class="fas fa-arrow-right"></i></a>*@
                            </div>

                        </div>
                    </div>
                }
            }


            <!-- Button -->
            <div class="col-md-12 text-center"><a href="@Url.Action("Service","Home")" class="btn btn-blue blue-hover mx-auto">See All Services</a></div>


        </div>	   <!-- End row -->
    </div>	   <!-- End container -->
</section>	<!-- END SERVICES-4 -->
