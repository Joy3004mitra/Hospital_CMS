@model IEnumerable<HospitalManagement.Models.MastBlog>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header space">
    <h2>Blogs</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New</a>
</div>
<div class="content-scroll">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Summary</th>
                <th>SEO Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model)
            {
                <tr>
                    <td>
                        <img src="@blog.BlogImage" width="70" height="50" alt="Blog image" />
                    </td>
                    <td>@blog.BlogTitle</td>
                    <td>@(string.IsNullOrEmpty(blog.BlogSummary) ? "-" : blog.BlogSummary)</td>
                    <td>@(string.IsNullOrEmpty(blog.MetaTitle) ? "-" : blog.MetaTitle)</td>
                    <td class="td-action-colomn">
                        <a href="@Url.Action("Edit", new { id = blog.MastBlogKey })" class="btn btn-warning">Edit</a>
                        @using (Html.BeginForm("Delete", "Blog", new { id = blog.MastBlogKey }, FormMethod.Post, true, new { onsubmit = "return confirm('Are you sure you want to delete this blog?');", style = "display:inline-block;" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">Delete</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
