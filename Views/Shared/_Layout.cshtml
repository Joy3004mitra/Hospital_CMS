<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link href="~/admin/css/styles.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/admin/js/style.js"></script>
</head>
<body>
    <div class="wrapper">
        <aside class="sidebar">
            <div class="logo">
                <h2>Admin Panel</h2>
            </div>
            <nav>
                <ul>
                    <li><a href="@Url.Action("Index","Doctor")">Doctors</a></li>
                    <li><a href="@Url.Action("Index","Service")">Hospital Services</a></li>
                    <li><a href="@Url.Action("Index","Testimonial")">Testimonials</a></li>
                    <li><a href="@Url.Action("Create","Site")">Site Settings</a></li>
                    <li><a href="@Url.Action("AppointmentHistory","Admin")">Appointment History</a></li>
                </ul>
            </nav>
        </aside>
        <main class="content">
            <header class="top-nav d-flex justify-content-between align-items-center p-3 bg-light">
                <span>Welcome, Admin</span>
                <a href="@Url.Action("Logout", "Admin")" class="btn btn-logout">Logout</a>
            </header>
            <section>
                @RenderBody()
            </section>
        </main>
    </div>
</body>
</html>