@model IEnumerable<HospitalManagement.Models.MastHosTestimonials>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h2>Testimonial</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Sl. No.</th>
            <th>Patient Name</th>
            <th>Comments</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var testimonial in Model)
        {
            <tr>
                <td>@testimonial.MastHosTestimonialsKey</td>
                <td>@testimonial.PatientName</td>
                <td>@testimonial.PatientComments</td>
                <td><img src="@testimonial.PatientImage" width="50" height="50"></td>
                <td>
                    <a href="@Url.Action("Edit", new { id = testimonial.MastHosTestimonialsKey })" class="btn btn-warning">Edit</a>
                    @using (Html.BeginForm("Delete", "Testimonial", new { id = testimonial.MastHosTestimonialsKey }, FormMethod.Post, true, new { onsubmit = "return confirm('Are you sure you want to delete this testimonial?');", style = "display:inline-block;" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
