@model HospitalManagement.Models.HeadSetting

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create/Edit Site Settings";
}

<div class="page-header">
    <h2 class="space">Site Settings</h2>
</div>

<div class="card content-scroll">
    @using (Html.BeginForm("Create", "Site", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="EmailId">Email Id</label>
                    <input type="text" id="EmailId" name="EmailId" class="form-control" placeholder="Enter email id" value="@Model?.EmailId" required />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="SiteAddress">Address</label>
                    <input type="text" id="SiteAddress" name="SiteAddress" class="form-control" placeholder="Enter address" value="@Model?.SiteAddress" required />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="PhoneNo">Contact No</label>
                    <input type="text" id="PhoneNo" name="PhoneNo" class="form-control" placeholder="Enter contact no" value="@Model?.PhoneNo" required />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="EmgncyPhoneNo">Emergency Contact No</label>
                    <input type="text" id="EmgncyPhoneNo" name="EmgncyPhoneNo" class="form-control" placeholder="Enter emregency contact no" value="@Model?.EmgncyPhoneNo" />
                </div>
            </div>
        </div>
        <div class="form-group upload-section">
            <label for="logoImage">Upload Logo Image</label>
            <div class="upload-box">
                <input type="file" id="logoImage" name="logoImage" class="form-control" onchange="previewImage(this, 'previewLogo')" /><br>

                <label for="ImagePreview">Image Preview</label>
                <img id="previewLogo"
                     src="@(string.IsNullOrEmpty(Model?.LogoImage) ? "#" : Url.Content(Model.LogoImage))"
                     alt="Logo Image"
                     class="img-thumbnail"
                     style="max-height: 100px; display:@(string.IsNullOrEmpty(Model?.LogoImage) ? "none" : "block");" />
            </div>
        </div>

        <div class="upload-box">
            <div class="row"><h3>Banner Slider</h3><br><br><br></div>

            @for (int i = 1; i <= 4; i++)
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="bannerImage@(i)">Upload Banner Image@(i)</label>
                            <input type="file" id="bannerImage@(i)" name="bannerImage@(i)" class="form-control" onchange="previewImage(this, 'previewBanner@(i)')" /><br>

                            <label for="ImagePreview">Image Preview</label>
                            <img id="previewBanner@(i)"
                                 src="@(string.IsNullOrEmpty(Model?.GetType().GetProperty($"BannerImage{i}")?.GetValue(Model)?.ToString()) ? "#" : Url.Content(Model.GetType().GetProperty($"BannerImage{i}")?.GetValue(Model)?.ToString()))"
                                 alt="Banner Image@(i)"
                                 class="img-thumbnail"
                                 style="max-height: 100px; display:@(string.IsNullOrEmpty(Model?.GetType().GetProperty($"BannerImage{i}")?.GetValue(Model)?.ToString()) ? "none" : "block");" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="BannerLink@(i)">Banner Link@(i)</label>
                            <input type="text" id="BannerLink@(i)" name="BannerLink@(i)" class="form-control" placeholder="Enter banner link@(i)" value="@Model?.GetType().GetProperty($"BannerLink{i}")?.GetValue(Model)" required />
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    }
</div>

<script>
    function previewImage(input, imgId) {
        var file = input.files[0];
        if (file) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var img = document.getElementById(imgId);
                img.src = e.target.result;
                img.style.display = "block";
            }
            reader.readAsDataURL(file);
        }
    }
</script>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: 'Success!',
                text: 'Site settings saved successfully!',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        });
    </script>
}