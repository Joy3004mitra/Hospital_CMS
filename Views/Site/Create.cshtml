@model HospitalManagement.Models.HeadSetting

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create/Edit Site Settings";
}

<div class="page-header">
    <h2 class="space">Site Settings</h2>
</div>

<div class="card">
    @using (Html.BeginForm("Create", "Site", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="EmailId">Email Id</label>
                    <input type="text" id="EmailId" name="EmailId" class="form-control" placeholder="Enter email id" value="@Model?.EmailId" required />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="SiteAddress">Address</label>
                    <input type="text" id="SiteAddress" name="SiteAddress" class="form-control" placeholder="Enter address" value="@Model?.SiteAddress" required />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="PhoneNo">Contact No</label>
                    <input type="text" id="PhoneNo" name="PhoneNo" class="form-control" placeholder="Enter contact no" value="@Model?.PhoneNo" required />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="EmgncyPhoneNo">Emergency Contact No</label>
                    <input type="text" id="EmgncyPhoneNo" name="EmgncyPhoneNo" class="form-control" placeholder="Enter emregency contact no" value="@Model?.EmgncyPhoneNo" />
                </div>
            </div>
        </div>
        <div class="form-group upload-section">
            <label for="logoImage">Upload Logo Image</label>
            <div class="upload-box">
                <input type="file" id="logoImage" name="logoImage" class="form-control" /><br>
                <label for="ImagePreview">Image Preview</label>
                <img src="../images/banner-1.jpg" alt="Doctor Image" class="img-thumbnail" style="max-height: 100px;">
            </div>
        </div>

        <div class="upload-box">
            <div class="row"><h3>Banner Slider</h3><br><br><br></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="BannerImage1">Upload Banner Image1</label>
                        <input type="file" id="bannerImage1" name="bannerImage1" class="form-control"><br>
                        <label for="ImagePreview">Image Preview</label>
                        <img src="../images/banner-1.jpg" alt="Doctor Image" class="img-thumbnail" style="max-height: 100px;"><br>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="BannerLink1">Banner Link1</label>
                        <input type="text" id="BannerLink1" name="BannerLink1" class="form-control" placeholder="Enter banner link1" value="@Model?.BannerLink1" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="BannerImage2">Upload Banner Image2</label>
                        <input type="file" id="bannerImage2" name="bannerImage2" class="form-control" /><br>
                        <label for="ImagePreview">Image Preview</label>
                        <img src="../images/banner-1.jpg" alt="Doctor Image" class="img-thumbnail" style="max-height: 100px;"><br>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="BannerLink2">Banner Link2</label>
                        <input type="text" id="BannerLink2" name="BannerLink2" class="form-control" placeholder="Enter banner link2" value="@Model?.BannerLink2" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="BannerImage3">Upload Banner Image3</label>
                        <input type="file" id="bannerImage3" name="bannerImage3" class="form-control" /><br>
                        <label for="ImagePreview">Image Preview</label>
                        <img src="../images/banner-1.jpg" alt="Doctor Image" class="img-thumbnail" style="max-height: 100px;"><br>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="BannerLink3">Banner Link3</label>
                        <input type="text" id="BannerLink3" name="BannerLink3" class="form-control" placeholder="Enter banner link3" value="@Model?.BannerLink3" required />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="BannerImage4">Upload Banner Image4</label>
                        <input type="file" id="bannerImage4" name="bannerImage4" class="form-control" /><br>
                        <label for="ImagePreview">Image Preview</label>
                        <img src="../images/banner-1.jpg" alt="Doctor Image" class="img-thumbnail" style="max-height: 100px;"><br>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="BannerLink4">Banner Link4</label>
                        <input type="text" id="BannerLink4" name="BannerLink4" class="form-control" placeholder="Enter banner link4" value="@Model?.BannerLink4" required />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    }
</div>


@if (TempData["SuccessMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: 'Success!',
                text: 'Site settings saved successfully!',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        });
    </script>
}