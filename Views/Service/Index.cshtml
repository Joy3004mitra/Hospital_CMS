@model IEnumerable<HospitalManagement.Models.MastHosService>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header space">
    <h2>Service</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Short Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.ServiceName</td>
                <td>@service.ServiceShortDesc</td>
                <td><img src="@service.ServiceImage" width="50" height="50"></td>
                <td class="td-action-colomn">
                    <a href="@Url.Action("Edit", new { id = service.MastHosServiceKey })" class="btn btn-warning">Edit</a>
                    @using (Html.BeginForm("Delete", "Service", new { id = service.MastHosServiceKey }, FormMethod.Post, true, new { onsubmit = "return confirm('Are you sure you want to delete this service?');", style = "display:inline-block;" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
